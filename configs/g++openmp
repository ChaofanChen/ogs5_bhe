## MDL, 22.04.2009, modified to use the new libphreeqc interface
MPI              = yes
NEW_SP           = yes;
CXX_LIBS         = -lstdc++
CXX_LDFLAGS      = -O0 -v
CXX_LD           = mpicxx
CXX_OPT_FLAGS    = -O3
CXX_DEBUG_FLAGS  = 
CXX_WARN_FLAGS   =
# MDL: PQC_LIBS defines additional includes for the new PHREEQC interface
PQC_LIBS         = -LPQC -lphreeqc
# MDL: remove -DLIBPHREEQC if the old / no phreeqc interface is needed
CXX_FLAGS        = -DUSE_MPI $(CXX_OPT_FLAGS) $(CXX_DEBUG_FLAGS) -DNEW_EQS -DPROBLEM_CLASS -DRANDOM_WALK -DLIBPHREEQC
CXX              = mpicxx

