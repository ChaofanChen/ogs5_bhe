## 17.04.2009 MDL
# config file for built-in phreeqc
NEW_SP           = yes;
## WW
DO_PQC              = yes;
CXX_LDFLAGS      =
CXX_LD           = g++

# OPTIMIZING/DEBUG
#
# MDL_DEBUG makes verbose output (NB: input file for libphreeqc outputted to cout: it becomes BIG)
CXX_OPT_FLAGS    = -O3
CXX_DEBUG_FLAGS  = #-DMDL_DEBUG # -ggdb
CXX_WARN_FLAGS   = 

# MDL: link the static libphreeqc.a (which MUST HAVE BEEN SEPARATELY COMPILED).
#      -DLIBPHREEQC activates the new coupling
PQC_LIBS         = -LPQC -lphreeqc
CXX_FLAGS        = -pedantic -fno-nonansi-builtins -DGCC -D_POSIX_SOURCE -DNO_ERROR_CONTROL $(CXX_OPT_FLAGS) $(CXX_DEBUG_FLAGS) -DNEW_EQS -DPROBLEM_CLASS -DRANDOM_WALK -DLIBPHREEQC 
CXX              = g++

